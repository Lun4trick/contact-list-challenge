model Contact {
  id          String   @id @default(uuid())
  name        String
  email       String
  phone       String
  pictureName String
  isFavourite  Boolean  @default(false)
  isSilenced  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
